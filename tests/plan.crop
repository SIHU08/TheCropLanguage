package wtf.iamsihu.croptest

fun main() {
    Person sihu = Person("김시후", 16)
    sihu.pleaseintroduceyourself()
}

class Person(String name, Int age) {
    construcor(String name) {
        this(name, 0)
    }

    fun pleaseintroduceyourself() {
        println("My name is $name")
        println("And I am $age years old")
    }

    fun oneyearslater() {
        age++
    }

    String whatIsYourName() {
        return name
    }

    Int howOldAreYou() {
        return age
    }
}